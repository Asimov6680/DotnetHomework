<script>
	var $prve = $('.J-prve'),
		$next = $('.J-next'),
		$changeImg = $('.J-change-img'),
		$titles = $('.J-titles'),
		$box = $('.J-img-box'),
		$boxEle = $box.find('ul li'),
		_len = $boxEle.size(),
		_w = $boxEle.width(),
		t = null,
		_a = 0;

	$next.on('click',_go);
	$prve.on('click',function(){
		_a--;
		if(_a < 0) _a = _len-1;
		$boxEle.hide();
		$boxEle.eq(_a).show();
		$titles.find('li').hide();
		$titles.find('li').eq(_a).show();
	});
	t = setInterval('_go()',5000);
	$changeImg.hover(function(){
		clearInterval(t);
	},function(){
		t = setInterval('_go()',5000);
	});
	function _go(){
		_a++;
		if(_a > _len-1) _a = 0;
		$boxEle.hide();
		$boxEle.eq(_a).show();
		$titles.find('li').hide();
		$titles.find('li').eq(_a).show();
	}
	$("#context_endf").html(
			"请支持独立网站，转发请注明本文链接：<a href='" + location.href + "'>"+ location.href + "</a>");
</script>
